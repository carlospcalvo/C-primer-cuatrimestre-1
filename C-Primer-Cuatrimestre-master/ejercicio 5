#include <stdio.h>
#include <stdlib.h>

int main()
{
    int contador = 0;
    int acumulador = 0;
    int num ;
    float promedio;

    while(contador < 5)
    {
        printf("ingrese un numero ");

        scanf("%d", &num);

        acumulador = acumulador + num ;

        contador ++;
    }

    promedio = (float) acumulador / contador;  /*se castea porque la maquina piensa que tiene que devolver un int*/

    printf(" el total es %d y el promedio es %d ", acumulador, promedio);

    return 0;

}
