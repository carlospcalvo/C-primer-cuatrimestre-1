#include <stdio.h>
#include <stdlib.h>

int main()
{
    char nombre[20];
    int edad;

    printf("Ingrese su nombre: ");
    gets(nombre);

    printf("Ingrese su edad: ");
    fflush(stdin);
    scanf("%d", &edad);

    printf("Su nombre es %s y su edad es %d anios\n", nombre, edad);

    return 0;

}
